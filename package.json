{
  "name": "husnapi",
  "version": "1.0.0",
  "description": "The 99 Names of Allah, Delivered!",
  "license": "MIT",
  "author": "Fauzira Alpiandi <fwzyrln@gmail.com>",
  "type": "module",
  "main": "dist/api/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc && cp -r data dist/data",
    "dev": "tsx watch src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint --fix api --ext .ts",
    "start": "node dist/api/index.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@types/express": "5.0.3",
    "express": "5.1.0",
    "express-rate-limit": "8.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "@types/node": "24.9.0",
    "@types/supertest": "6.0.3",
    "eslint": "9.38.0",
    "prettier": "3.6.2",
    "semantic-release": "25.0.1",
    "supertest": "7.1.4",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "vitest": "3.2.4"
  }
}
